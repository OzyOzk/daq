{
  "title": "Device discovery schema",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "enum": [
        1
      ]
    },
    "local_id": {
      "type": "string",
      "pattern": "^[A-Z][A-Z0-9]*((_|-)[A-Z0-9]+)*$"
    },
    "points": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][a-z0-9]*(_[a-z0-9]+)*$": {
          "$ref": "#/definitions/point_property_names"
        }
      }
    }
  },
  "required": [
    "timestamp",
    "version",
    "local_id",
    "points"
  ],
  "definitions": {
    "point_property_names": {
      "propertyNames": {
        "oneOf": [
          {
            "enum": [
              "units",
              "present_value"
            ]
          }
        ]
      }
    }
  }
}
